<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/registericon"
        />

    <EditText
        android:id="@+id/et_first_name"
        android:textColor="#0F0202"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/iv_user"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:text="First Name"
        android:textStyle="bold|italic"
        android:textColor="#0F0101"
        android:textSize="16sp" />



    <EditText
        android:id="@+id/et_last_name"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_first_name"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="16sp" />



    <EditText
        android:id="@+id/et_username"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_last_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_last_name"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Username"
        android:textColor="#090000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_reg_password"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_reg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_reg_email"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_reg_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/tv_reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_reg_password"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_reg_address"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_reg_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/tv_reg_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_reg_email"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_reg_postcode"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_reg_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_reg_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_reg_address"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Postcode"
        android:textColor="#000000"
        android:textSize="16sp" />




    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_reg_postcode"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp">
        <RadioButton
            android:id="@+id/rb_gender_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>
        <RadioButton
            android:id="@+id/rb_gender_F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_reg_postcode"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Gender"
        android:textColor="#070000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dp_dob"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rg_gender"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/tv_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/rg_gender"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Date of birth"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_height"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/dp_dob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/dp_dob"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Height"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_weight"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_height"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Weight"
        android:textColor="#000000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_stpes_per_mile"
        android:textColor="#000000"
        android:background="#fff"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/et_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_stpes_per_mile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_weight"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Steps per mile"
        android:textColor="#000000"
        android:textSize="16sp" />




    <TextView
        android:id="@+id/tv_level_of_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_stpes_per_mile"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold|italic"
        android:text="Level Of Activity"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner_LOA"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_first_name"
        android:layout_alignStart="@+id/et_first_name"
        android:layout_below="@+id/et_stpes_per_mile"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:text="Level Of Activity"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />



    <Button
        android:id="@+id/btn_register"
        android:background="#ffffff"
        android:textColor="#FF0000"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/spinner_LOA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register" />


    <TextView
        android:id="@+id/tv_test"
        android:layout_below="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>